<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="left"
    android:orientation="vertical"
    android:weightSum="1"
    tools:layout_editor_absoluteX="360dp"
    tools:layout_editor_absoluteY="25dp">

    <RelativeLayout
        android:id="@+id/biaoti"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="#236fb1">
        <TextView
            android:text="Clinic Review"
            android:id="@+id/text_title"
            android:textSize="21sp"
            android:textColor="#fff"
            android:gravity="center"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/button_backward"
            android:layout_width="68dp"
            android:layout_height="match_parent"
            android:background="#5587b3"
            android:drawablePadding="6dp"
            android:ellipsize="end"
            android:gravity="center"
            android:onClick="onClick"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:text="Back"
            android:textColor="#ffffffff"
            android:textSize="18dp"
            android:visibility="visible" />

        <Button
            android:id="@+id/button_forward"
            android:layout_width="68dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="#5587b3"
            android:drawablePadding="6dp"
            android:ellipsize="end"
            android:gravity="center"
            android:onClick="onClick"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:text="Submit"
            android:textColor="#ffffffff"
            android:textSize="18dp"
            android:visibility="visible" />
    </RelativeLayout>


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:autoText="false"
        android:text="Intake of any other drugs that may impact on insulin sensitivity?"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="21sp" />

    <LinearLayout
        android:layout_width="373dp"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingTop="5dp">

        <RadioButton
            android:id="@+id/radioButton1"
            android:layout_width="121dp"
            android:layout_height="60dp"
            android:text="No" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="122dp"
            android:layout_height="60dp"
            android:text="Yes" />


    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:autoText="false"
        android:text="Ultrasound pelvis"
        android:textSize="21sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />
    <LinearLayout
        android:layout_width="373dp"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="221dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:autoText="false"
            android:text="When done (YYYY)?"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="21sp" />


        <EditText
            android:id="@+id/editText1"
            android:layout_width="123dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:digits="1234567890"
            android:drawablePadding="10dp"
            android:ems="10"
            android:gravity="top"
            android:maxLines="2"
            android:padding="10dp" />


    </LinearLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:autoText="false"
        android:text="Polycystic ovarian (PCO) morphology?"
        android:textSize="21sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:autoText="false"
        android:text="Definition of PCO morphology: 12 or more follicles 2â€“9 mm in diameter and/or an increased ovarian volume >10 mL (without a cyst or dominant follicle) in either ovary"
        android:textAppearance="@style/TextAppearance.AppCompat" />

    <LinearLayout
        android:layout_width="373dp"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingTop="5dp">

        <RadioButton
            android:id="@+id/radioButton4"
            android:layout_width="176dp"
            android:layout_height="wrap_content"
            android:text="No" />

        <RadioButton
            android:id="@+id/radioButton5"
            android:layout_width="188dp"
            android:layout_height="wrap_content"
            android:text="Yes, both ovaries" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="373dp"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingTop="5dp">

        <RadioButton
            android:id="@+id/radioButton6"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Yes, left ovary only" />

        <RadioButton
            android:id="@+id/radioButton7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yes, right ovary only " />


    </LinearLayout>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:autoText="false"
        android:text="Volume Right Ovary: XX.X mL	Volume Left Ovary: XX.X mL"
        android:textSize="15sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />


</LinearLayout>
