<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="left"
    android:orientation="vertical"
    android:weightSum="1"
    tools:layout_editor_absoluteX="360dp"
    tools:layout_editor_absoluteY="25dp">
    <RelativeLayout
        android:id="@+id/biaoti"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="#236fb1">
        <TextView
            android:text="Menstrual Cycle"
            android:id="@+id/text_title"
            android:textSize="21sp"
            android:textColor="#fff"
            android:gravity="center"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/button_backward"
            android:layout_width="68dp"
            android:layout_height="match_parent"
            android:background="#5587b3"
            android:drawablePadding="6dp"
            android:ellipsize="end"
            android:gravity="center"
            android:onClick="onClick"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:text="Back"
            android:textColor="#ffffffff"
            android:textSize="18dp"
            android:visibility="visible" />

        <Button
            android:id="@+id/button_forward"
            android:layout_width="68dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="#5587b3"
            android:drawablePadding="6dp"
            android:ellipsize="end"
            android:gravity="center"
            android:onClick="onClick"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:text="Next"
            android:textColor="#ffffffff"
            android:textSize="18dp"
            android:visibility="visible" />
    </RelativeLayout>


    <TextView
        android:id="@+id/t1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1.How old were you when you had your first menstrual bleed?"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <EditText
        android:id="@+id/e1"
        android:layout_width="313dp"
        android:layout_height="38dp"
        android:layout_marginTop="8dp"
        android:digits="1234567890"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Years (YY)"
        android:inputType="phone"
        android:maxLines="2"
        android:padding="10dp"
         />

    <TextView
        android:id="@+id/t2"
        android:layout_width="373dp"
        android:layout_height="wrap_content"
        android:text="2.At the time when you developed your first pubic hair, were you under the age of 8 years?"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:gravity="left"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingTop="5dp">

        <RadioGroup
            android:id="@+id/rg1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/r1"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:text="No" />

            <RadioButton
                android:id="@+id/r2"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Yes" />

        </RadioGroup>
    </LinearLayout>


    <TextView
        android:id="@+id/t3"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:text="3.At present, are your menstrual bleeds (please tick):"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />


    <LinearLayout
        android:layout_width="328dp"
        android:layout_height="41dp"
        android:gravity="left"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingTop="5dp">

        <RadioGroup
            android:id="@+id/rg2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/r3"
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:text="regular" />

            <RadioButton
                android:id="@+id/r4"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="irregular" />

            <RadioButton
                android:id="@+id/r5"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="absent" />
        </RadioGroup>
    </LinearLayout>


    <TextView
        android:id="@+id/t4"
        android:layout_width="371dp"
        android:layout_height="wrap_content"
        android:text="4.If your cycle is regular,what is the average time between two bleeds?"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <EditText
        android:id="@+id/e2"
        android:layout_width="313dp"
        android:layout_height="38dp"
        android:layout_marginTop="8dp"
        android:digits="1234567890"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Days (DD)"
        android:inputType="phone"
        android:maxLines="2"
        android:padding="10dp" />

    <TextView
        android:id="@+id/t5"
        android:layout_width="367dp"
        android:layout_height="wrap_content"
        android:text="5.If your cycle is irregular,how many bleeds did you have in the last 12 months?"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <EditText
        android:id="@+id/e3"
        android:layout_width="313dp"
        android:layout_height="38dp"
        android:layout_marginTop="8dp"
        android:digits="1234567890"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="XX bleeds"
        android:inputType="phone"
        android:maxLines="2"
        android:padding="10dp" />

    <TextView
        android:id="@+id/t6"
        android:layout_width="371dp"
        android:layout_height="wrap_content"
        android:text="6.how old were you when your cycle started to become irregular?"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <EditText
        android:id="@+id/e4"
        android:layout_width="313dp"
        android:layout_height="38dp"
        android:layout_marginTop="8dp"
        android:digits="1234567890"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Years (YY)"
        android:inputType="phone"
        android:maxLines="2"
        android:padding="10dp" />

    <TextView
        android:id="@+id/t7"
        android:layout_width="371dp"
        android:layout_height="wrap_content"
        android:text="7.how long ago did your have your last bleed?"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <EditText
        android:id="@+id/e5"
        android:layout_width="313dp"
        android:layout_height="38dp"
        android:layout_marginTop="8dp"
        android:digits="1234567890"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Years (YY) or  Month(s) (MM)"
        android:inputType="phone"
        android:maxLines="2"
        android:padding="10dp" />

</LinearLayout>